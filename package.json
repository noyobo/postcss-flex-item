{
  "name": "postcss-flex-item",
  "version": "0.0.0",
  "description": "PostCSS plugin separate the flex child element style into a selector",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "flex"
  ],
  "scripts": {
    "test": "jest-ci --coverage"
  },
  "author": "noyobo <noyobo@gmail.com>",
  "license": "MIT",
  "repository": "noyobo/postcss-flex-item",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.1.0"
  },
  "devDependencies": {
    "postcss": "^8.1.1",
    "eslint": "^7.10.0",
    "eslint-plugin-jest": "^24.0.2",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-ci": "^0.1.1",
    "jest-cli": "^26.4.2",
    "lint-staged": "^10.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "prettier --write"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}